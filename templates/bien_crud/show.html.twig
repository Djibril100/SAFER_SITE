<!DOCTYPE>
<html>
	<head>
		<meta charset="UTF-8"> {% block title %}{% endblock %}

		<meta charset="utf-8">
		<meta
		name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

		<!-- Bootstrap CSS -->
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">


	</head>

	{% block body %}
		<h1>Details du Bien</h1>


		<table class="table table-striped table-hover">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ bien.id }}</td>
				</tr>
				<tr>
					<th>Reference</th>
					<td>{{ bien.reference }}</td>
				</tr>
				<tr>
					<th>Intitule</th>
					<td>{{ bien.intitule }}</td>
				</tr>
				<tr>
					<th>Descriptif</th>
					<td>{{ bien.descriptif }}</td>
				</tr>
				<tr>
					<th>Localisation</th>
					<td>{{ bien.localisation }}</td>
				</tr>
				<tr>
					<th>Surface</th>
					<td>{{ bien.surface }}</td>
				</tr>
				<tr>
					<th>Prix</th>
					<td>{{ bien.prix }}</td>
				</tr>
				<tr>
					<th>Type</th>
					<td>{{ bien.type }}</td>
				</tr>
			</tbody>
		</table>

		<a href="{{ path('app_bien_crud_index') }}">
			<button type="button" class="btn btn-success">Retour</button>
		</a>

		<a href="{{ path('app_bien_crud_edit', {'id': bien.id}) }}">
			<button type="button" class="btn btn-success">Modifier</button>
		</a>


		{{ include('bien_crud/_delete_form.html.twig') }}

		<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
		<script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

	{% endblock %}
</html>
