<!DOCTYPE html>
<head>
	<meta charset="UTF-8"> {% block title %}{% endblock %}

	<meta charset="utf-8">
	<meta
	name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	<!-- Bootstrap CSS -->
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
	<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
	<script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

</head>
<title>Liste des biens</title>

{% block body %}
	<h1>Liste des biens</h1>

	<table class="table table-striped table-hover">
		<thead>
			<tr>
				<th>Id</th>
				<th>Reference</th>
				<th>Intitule</th>
				<th>Descriptif</th>
				<th>Localisation</th>
				<th>Surface</th>
				<th>Prix</th>
				<th>Type</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for bien in biens %}
				<tr>
					<td>{{ bien.id }}</td>
					<td>{{ bien.reference }}</td>
					<td>{{ bien.intitule }}</td>
					<td>{{ bien.descriptif }}</td>
					<td>{{ bien.localisation }}</td>
					<td>{{ bien.surface }}</td>
					<td>{{ bien.prix }}</td>
					<td>{{ bien.type }}</td>
					<td>
						<a href="{{ path('app_bien_crud_show', {'id': bien.id}) }}">
							<button type="button" class="btn btn-info">Voir</button>
						</a>
						<p></p>
						<a href="{{ path('app_bien_crud_edit', {'id': bien.id}) }}">
							<button type="button" class="btn btn-success">Editer</button>
						</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="9">Aucune valeur trouv√©e</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<div class="pagination">
		{{knp_pagination_render(biens)}}
	</div>
	<a href="{{ path('app_bien_crud_new') }}">
		<button type="button" class="btn btn-secondary">Creer un nouveau bien</button>
	</a>
	<p></p>

{% endblock %}
